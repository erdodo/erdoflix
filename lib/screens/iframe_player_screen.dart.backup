    required this.onStay,
  });

  @override
  State<_AutoSwitchDialog> createState() => _AutoSwitchDialogState();
}

class _AutoSwitchDialogState extends State<_AutoSwitchDialog>
    with SingleTickerProviderStateMixin {
  late AnimationController _controller;
  Timer? _countdownTimer;
  int _remainingSeconds = 5;

  @override
  void initState() {
    super.initState();

    // Animasyon controller (5 saniye)
    _controller = AnimationController(
      vsync: this,
      duration: const Duration(seconds: 5),
    )..forward();

    // Countdown timer (her saniye gÃ¼ncelle)
    _countdownTimer = Timer.periodic(const Duration(seconds: 1), (timer) {
      if (_remainingSeconds > 1) {
        setState(() {
          _remainingSeconds--;
        });
      } else {
        timer.cancel();
        // 5 saniye doldu, otomatik geÃ§
        widget.onSwitch();
      }
    });
  }

  @override
